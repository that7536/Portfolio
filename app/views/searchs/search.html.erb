<% if @model == 'user' %>
  <h3>【Usersモデルの検索結果】検索ワード：<%= @content %></h3>
  <% @records.each do |user| %>
    <%= link_to user_path(user) do %>
      <%= user.name %><br>
    <% end %>
  <% end %>
<% elsif @model == 'posts' %>
  <h3>【Postsモデルの検索結果】検索ワード：<%= @content %></h3>
  <table>
    <thead>
      <tr>
        <th>投稿者名</th>
        <th>タイトル</th>
        <th>本文</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
      <tr>
          <td><%= record.user.name %></td>
          <td><%= record.title %></td>
          <td><%= record.body %></td>
          <td><%= link_to "詳細", record_path(record) %></td>
          <% if record.user == current_user %>
            <td><%= link_to "編集", edit_post_path(record) %></td>
            <td><%= link_to "削除", post_path(record), method: :delete, remote: true %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <!--%= link_to tag_path(tag) do %-->
    <!--%= tag.name %--><br>
  <!--% end %-->
<% end %>