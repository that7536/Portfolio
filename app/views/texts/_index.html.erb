<table class='table table-hover table-inverse'>
  <tbody>
    <% texts.each do |text| %>
      <tr id="text_<%= text.id %>">
        <td><%= link_to user_path(text.user) do %>
          <%= attachment_image_tag(text.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to text.title, text_path(text), class: "text_#{text.id}" %></td>
        <td><%= text.text %></td>
        <td><%= text.comments.count %>件のコメント</td>
        <td>
          <!--ブックマーク登録・解除-->
          <% user.each do |user| %>
            <% if current_user.bookmarks?(user) %>
              <%= link_to "保存済み", bookmark_path(user.id), method: :delete %>
            <% else %>
              <%= link_to "ブックマークに保存", bookmarks_path(user.id), method: :post %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


