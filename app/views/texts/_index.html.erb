<table class='table table-hover table-inverse'>
  <tbody>
    <% texts.each do |text| %>
      <tr id="text_<%= text.id %>">
        <td><%= link_to user_path(text.user) do %>
          <%= attachment_image_tag(text.user, :profileimage, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to text.title, text_path(text), class: "text_#{text.id}" %></td>
        <td><%= text.text %></td>
        <td><%= text.comments.count %>件のコメント</td>
        <td>
          <!--ブックマーク登録・解除-->
            <% if user.bookmarks.where(text_id:text.id).present? %>
              <%= link_to "保存済み", text_bookmark_path(text.id), method: :delete %>
            <% else %>
              <%= link_to "ブックマークに保存", text_bookmarks_path(text.id), method: :post %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


