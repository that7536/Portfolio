<h1>新しく投稿する</h1>
<%= form_with model: @text, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <div class="form-group">
    <%= f.attachment_field :profileimage %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿する' %>
  </div>
<% end %>

