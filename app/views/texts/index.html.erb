<div class='container'>
  <div class='row'>
    <h1>投稿一覧(新着順)</h1>
    <table class='table table-hover table-inverse'>
      <tbody>
        <% @texts.reverse.each do |text| %>
          <tr id="text_<%= text.id %>">
            <td>
              <%= link_to text_path(text.id) do %>
                <%= attachment_image_tag(text, :image, :size =>'200x150', fallback: "no-image-icon.jpg") %>
              <% end %>
            </td>
            <td><%= link_to text.title, text_path(text), class: "text_#{text.id}" %></td>
            <td class="bookmark-btn">
              <%= render "bookmarks/bookmarks", text: text %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>