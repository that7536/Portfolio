<h2>投稿編集</h2>
<%= form_with model: @text, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :text %>
  </div>
  <div class="form-group">
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :タグ（※半角カンマを入れることで複数のタグをつけることができます。）%>
    <%= f.text_field :tag %>
  </div>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>

