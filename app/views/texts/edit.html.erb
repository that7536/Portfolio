<h2>ユーザー設定</h2>
<%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
     <%= f.label :image %>
    <%= f.attachment_field :profileimage %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>

