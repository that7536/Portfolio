<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>ユーザー情報編集</h1>
    <%= form_with model: @user, local:true do |f| %>
      <!--エラー文テンプレート-->
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィールアイコン %>
        <%= f.attachment_field :profileimage %>
      </div>
      <div>
        <%= f.label :ステータスメッセージ %>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit :変更を保存する %>
      </div>
    <% end %>
  </div>
</div>