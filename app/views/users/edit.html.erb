<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>ユーザー情報編集</h1>
    <%= form_with model: @user, local:true do |f| %>
      <!--エラー文テンプレート-->
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profileimage, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>